@model StudyPlatform.ViewModels.ScheduleViewModel

<style>
    .dropdown-custom {
        width: 50px;
        height: 50px;
    }
</style>

<div class="calendar-content">
    <h1>ВИВЧИ СВІЙ РОЗКЛАД</h1>
    <table>
        <tr>
            <th class="null-time-column"></th>
            <th>ПН</th>
            <th>ВТ</th>
            <th>СР</th>
            <th>ЧТ</th>
            <th>ПТ</th>
            <th>СБ</th>
            <th>ВС</th>
        </tr>
        @for (int hour = 13; hour <= 20; hour++)
        {
            <tr>
                <td class="time-column">@hour:00</td>
                @foreach (var day in new[] { "ПН", "ВТ", "СР", "ЧТ", "ПТ", "СБ", "ВС" })
                {
                    <td>
                        @foreach (var item in Model.GetSchedule(day, $"{hour}:00"))
                        {
                            <div class="@item.Teacher.Subject.AbbrSubject">
                                @item.Time<br>@item.Teacher.Subject.Name<br>@item.Teacher.User.FirstName
                            </div>
                        }
                    </td>
                }
            </tr>
        }
    </table>
</div>