 <script>
    document.getElementById('cloneNavbarCollapse').addEventListener('click', function (event) {
        event.preventDefault(); // Prevent the default link behavior

        // Select the navbar collapse element
        var navbarCollapse = document.querySelector('.navbar-collapse');

        if (navbarCollapse) {
            // Clone the navbar collapse content
            var clonedContent = navbarCollapse.cloneNode(true);

            // Optional: Append the cloned content to a specific place in the DOM
            // Here, we assume there's a div with id 'navbar-clone-container' to place the cloned navbar
            document.getElementById('navbar-clone-container').appendChild(clonedContent);
        } else {
            console.error('Navbar collapse element not found');
        }
    });

</script>