@{
    ViewData["Title"] = "Оцініть свою мотивацію";
    Layout = "~/Views/Shared/_MinimalLayout.cshtml";
}

<style>
    html, body {
        overflow-y: hidden !important;
    }
</style>

<link rel="stylesheet" href="~/css/Questionare/QuestionareMotivation.css" />
<link rel="stylesheet" href="~/css/Questionare/Background/Shadows.css">

<div class=" top-left"></div>
<div class=" top-right"></div>
<div class=" bottom-left"></div>
<div class=" bottom-right"></div>

<div class="container">
    <h1>ОЦІНИ СВОЮ МОТИВАЦІЮ</h1>
    <form action="/learningFormat" method="post" id="ratingForm">
        <div class="content">
            <div class="stripe" id="submitStripe-1">
                <div class="stars">
                    <div class="star "></div>
                    <div class="star grey"></div>
                    <div class="star grey"></div>
                    <div class="star grey"></div>
                    <div class="star grey"></div>
                </div>
                <div class="memojiCircle">
                    <div class="memojiCircleInnerBg">
                        <img src="~/Images/QuestionareImages/4_Motivation/OneStarMemoji.png" />
                    </div>
                </div>
            </div>
            <div class="stripe" id="submitStripe-2">
                <div class="stars">
                    <div class="star "></div>
                    <div class="star "></div>
                    <div class="star grey"></div>
                    <div class="star grey"></div>
                    <div class="star grey"></div>
                </div>
                <div class="memojiCircle">
                    <div class="memojiCircleInnerBg">
                        <img src="~/Images/QuestionareImages/4_Motivation/TwoStarMemoji.png" />
                    </div>
                </div>
            </div>
            <div class="stripe">
                <div class="stars" id="submitStripe-3">
                    <div class="star "></div>
                    <div class="star "></div>
                    <div class="star "></div>
                    <div class="star grey"></div>
                    <div class="star grey"></div>
                </div>
                <div class="memojiCircle">
                    <div class="memojiCircleInnerBg">
                        <img src="~/Images/QuestionareImages/4_Motivation/ThreeStarMemoji.png" />
                    </div>
                </div>
            </div>
            <div class="stripe" id="submitStripe-4">
                <div class="stars">
                    <div class="star "></div>
                    <div class="star "></div>
                    <div class="star "></div>
                    <div class="star "></div>
                    <div class="star grey"></div>
                </div>
                <div class="memojiCircle">
                    <div class="memojiCircleInnerBg">
                        <img src="~/Images/QuestionareImages/4_Motivation/FourStarMemoji.png" />
                    </div>
                </div>
            </div>
            <div class="stripe" id="submitStripe-5">
                <div class="stars">
                    <div class="star "></div>
                    <div class="star "></div>
                    <div class="star "></div>
                    <div class="star "></div>
                    <div class="star"></div>
                </div>
                <div class="memojiCircle">
                    <div class="memojiCircleInnerBg">
                        <img src="~/Images/QuestionareImages/4_Motivation/FiveStarMemoji.png" />
                    </div>
                </div>
            </div>
            
            <input type="hidden" name="KnownlegeRating" value="@Model.KnownlegeRating"/>
            <input type="hidden" name="Motivation" id="Motivation" value="NOT IMPLEMENTED" />

            @* <button class="go-forward" type="submit">Идите вперед</button> *@
        </div>
    </form>
</div>

<script>
    var ratingInput = document.getElementById('Motivation');
    var form = document.getElementById('ratingForm');

    function submitRating(rating) {
        ratingInput.value = rating;
        form.submit();
    }

    document.getElementById('submitStripe-1').addEventListener('click', function () {
        submitRating(1);
    });
    document.getElementById('submitStripe-2').addEventListener('click', function () {
        submitRating(2);
    });
    document.getElementById('submitStripe-3').addEventListener('click', function () {
        submitRating(3);
    });
    document.getElementById('submitStripe-4').addEventListener('click', function () {
        submitRating(4);
    });
    document.getElementById('submitStripe-5').addEventListener('click', function () {
        submitRating(5);
    });
</script>