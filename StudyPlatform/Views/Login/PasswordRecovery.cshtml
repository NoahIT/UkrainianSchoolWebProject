@model StudyPlatform.ViewModels.RecoveryViewModel
@{
    ViewData["Title"] = "Відновлення паролів";
    Layout = "~/Views/Shared/_MinimalLayout.cshtml";
}

<link rel="stylesheet" href="~/css/PasswordRecovery/passwordRecoveryFinal.css" />
<link rel="stylesheet" href="~/css/siteMinmal.css" />

<div class="login-main-container">
    <div class="top-bar">
        <div class="line"></div>
        <a class="close-btn" asp-area="" asp-controller="Home" asp-action="Index">X</a>
    </div>

    <div class="login-container">

        <h2>Змініть пароль</h2>

        <form action="/password-recovery" method="post" class="login-form">
            @Html.AntiForgeryToken()
            <div class="login-box">
                <input type="hidden" value="@Model.Code" name="Code"/>

                <div class="form-group">
                    <label for="password" class="control-label">Пароль</label>
                    <input type="password" id="password" name="password1" class="form-control" placeholder="вкажіть пароль" required>
                </div>

                <div class="form-group">
                    <label for="password-again" class="control-label">Повторіть пароль</label>
                    <input type="password" id="password-again" name="password2" class="form-control" placeholder="повторіть пароль" required>
                    <div class="error">@Html.ValidationMessageFor(m => m.Password2)</div>
                </div>
            </div>

            <div class="form-group-buttons-recovery">
                <button type="submit" class="btn btn-secondary">Змінити пароль</button>
            </div>
        </form>
    </div>
@*     <div class="bottom-bar">
        <div class="line line-bottom"></div>
    </div> *@
</div>

